@{
    ViewData["Title"] = "Site hakkındaki yorumlarınızı gönderiniz";
}

<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="form-group">
        <strong>Adı Soyadı</strong> <input type="text" name="Adsoyad" id="Adsoyad" required
                          autofocus maxlength="25" class="form-control" />
    </div>
    <div class="form-group">
        <strong>E-Posta Adresi</strong> <input type="email" name="Eposta" id="Eposta" required
                              maxlength="40" class="form-control" />
    </div>
    <div>
        <strong>Mesajınız</strong> <textarea name="Mesaj" id="Mesaj" required cols="" rows="4" class="form-control"></textarea>
    </div><br />
    <div>
        <button type="submit" id="Gonder" class="btn btn-success">E-Posta Gönder</button>
    </div>
</form>
<div>
    @if (ViewData["sonucmesaj"] != null)
    {
        <br />
        <div style="color:green">@Html.Raw(ViewData["sonucmesaj"])</div>
    }
</div>
