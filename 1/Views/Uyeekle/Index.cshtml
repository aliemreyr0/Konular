@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-3">
    <form method="post">
        <div class="form-group">
            <label><strong>Kullanıcı Adı</strong></label>
            <input type="text" name="Kuladi" maxlength="10" required class="form-control" />
        </div>
        <div class="form-group">
            <label><strong>Parola</strong></label>
            <input type="password" name="Parola" maxlength="8" required class="form-control" />
        </div>
        <div class="form-group">
            <label><strong>Adı Soyadı</strong></label>
            <input type="text" name="Adsoyad" maxlength="25" required class="form-control" />
        </div>
        <div class="form-group">
            <label><strong>E-posta</strong></label>
            <input type="email" name="Eposta" maxlength="50" required class="form-control" />
        </div>
        <div class="form-group">
            <label><strong>Yetki</strong></label>
            <select name="Yetki" class="form-control" required>
                <option value="0">Kullanıcı</option>
                <option value="-1">Yönetici</option>
            </select>
        </div>
        <div class="form-group">
            <label><strong>Açıklama</strong></label>
            <input type="text" name="Aciklama" maxlength="60" required class="form-control" />
        </div>
        <button type="submit" class="btn btn-success mt-2">Yeni Üye Ekle</button>
    </form>

    @if (ViewData["sonucmesaj"] != null)
    {
        <div class="mt-3">
            @Html.Raw(ViewData["sonucmesaj"])
        </div>
    }
</div>
