@model BenimsiteMvc.Models.UrunlerModel

@{
    ViewData["Title"] = "Kayıtları Düzeltme";
}

<h1>@ViewData["Title"]</h1>

<h4>Ürünler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Kimlik</label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Urunadi" class="control-label">Ürün Adı</label>
                <input asp-for="Urunadi" class="form-control" />
                <span asp-validation-for="Urunadi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategori" class="control-label">Kategori</label>
                <input asp-for="Kategori" class="form-control" />
                <span asp-validation-for="Kategori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label">Fiyat</label>
                <input asp-for="Fiyat" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewData["sonucmesaj"] != null)
    {
        <span class="fw-bold">@ViewData["sonucmesaj"]</span>
    }
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

