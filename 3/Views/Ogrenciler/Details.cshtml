@model BenimsiteMvc.Models.OgrenciModel

@{
    ViewData["Title"] = "Kayıt Ayrıntıları";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Öğrenciler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <strong>Kimlik</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <strong>Öğrenci No</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ogrencino)
        </dd>
        <dt class = "col-sm-2">
            <strong>Adı Soyadı</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adsoyad)
        </dd>
        <dt class = "col-sm-2">
            <strong>Bölüm</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bolum)
        </dd>
        <dt class = "col-sm-2">
            <strong>Kayıt Tarihi</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kayittarihi)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Düzelt", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
