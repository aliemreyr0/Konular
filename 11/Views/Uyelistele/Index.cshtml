@model List<BenimsiteMvc.Controllers.Kullanici>

@{
    ViewData["Title"] = "Üye Listesi";
}

<h2>Üye Listesi</h2>

<table id="uyelerTablosu" class="table table-bordered">
    <thead>
        <tr>
            <th>Kimlik</th>
            <th>Kullanıcı Adı</th>
            <th>Adı Soyadı</th>
            <th>E-posta</th>
            <th>Yetki</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model)
        {
            var yoneticimi = uye.Yetki == "-1";
            <tr style="@(yoneticimi ? "color:red; font-weight:bold;" : "")">
                <td>@uye.Id</td>
                <td>@uye.Kuladi</td>
                <td>@uye.Adsoyad</td>
                <td>@uye.Eposta</td>
                <td>@(yoneticimi ? "Yönetici" : "Kullanıcı")</td>
                <td>@uye.Aciklama</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#uyelerTablosu').DataTable({
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
            }
        });
    });
</script>
